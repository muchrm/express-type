{
  "name": "express-typescript",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run build:watch\" \"npm run start:watch\""
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/node": "^8.5.2",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.7",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "change-case": "^3.0.1",
    "express": "^4.16.2",
    "require-dir": "^0.3.2"
  }
}
